@page
@model SistemaContableLaDat.Pages.Pantallas.IndexModel
@{
    ViewData["Title"] = "Administración de Pantallas";
    Layout = "_PrincipalLayout";
}
<h1 class="mt-4">Administración de Pantallas</h1>
<p>
    <a class="btn btn-dark" asp-page="Crear">
        <i class="bi bi-plus-circle"></i> Nuevo
    </a>
</p>


<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th style="white-space: nowrap;">ID</th>
                <th style="white-space: nowrap;">Nombre</th>
                <th style="white-space: nowrap;">Descripcion</th>
                <th style="white-space: nowrap;">Ruta</th>
                <th style="white-space: nowrap;">Estado</th>
                <th style="white-space: nowrap;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Pantallas.Count; i++)
            {
                <tr>
                    <td style="white-space: nowrap;">@Model.Pantallas[i].IdPantalla</td>
                    <td style="white-space: nowrap;">@Model.Pantallas[i].Nombre</td>
                    <td style="white-space: nowrap;">@Model.Pantallas[i].Descripcion</td>
                    <td style="white-space: nowrap;">@Model.Pantallas[i].Ruta</td>
                    <td>
                        <form method="post" asp-page-handler="CambiarEstado" class="d-inline">
                            <input type="hidden" name="IdUsuario" value="@Model.Pantallas[i].IdPantalla" />
                            <select name="NuevoEstado" class="form-select form-select-sm"
                                    onchange="this.form.submit()">
                                @foreach (var estado in Enum.GetValues(typeof(SistemaContableLaDat.Entities.Roles.EstadoRol)))
                                {
                                    <option value="@estado"
                                            selected="@(estado.ToString() == Model.Pantallas[i].Estado ? "selected" : null)">
                                        @estado
                                    </option>
                                }
                            </select>
                        </form>
                    <td style="white-space: nowrap;">
                        <a class="btn btn-sm btn-outline-dark"
                           asp-page="Editar"
                           asp-route-IdRol="@Model.Pantallas[i].IdPantalla">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>


                        <button type="button"
                                class="btn btn-sm btn-danger"
                                data-bs-toggle="modal"
                                data-bs-target="#modalEliminar"
                                data-id="@Model.Pantallas[i].IdPantalla"
                                data-nombre="@Model.Pantallas[i].IdPantalla">
                            <i class="bi bi-trash3"></i> Eliminar
                        </button>

                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

<nav aria-label="Paginación de pantallas" class="mt-4">
    <ul class="pagination pagination-dark justify-content-center">
        @if (Model.PaginaActual > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-route-pagina="@(Model.PaginaActual - 1)" aria-label="Anterior">
                    <i class="bi bi-chevron-left"></i>
                </a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPaginas; i++)
        {
            <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                <a class="page-link" asp-route-pagina="@i">@i</a>
            </li>
        }

        @if (Model.PaginaActual < Model.TotalPaginas)
        {
            <li class="page-item">
                <a class="page-link" asp-route-pagina="@(Model.PaginaActual + 1)" aria-label="Siguiente">
                    <i class="bi bi-chevron-right"></i>
                </a>
            </li>
        }
    </ul>
</nav>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-dark" role="alert">
        @TempData["Mensaje"]
    </div>
}

<div class="modal fade" id="modalEliminar" tabindex="-1" aria-labelledby="modalEliminarLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form method="post" asp-page-handler="Eliminar">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalEliminarLabel">Confirmar Eliminación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    ¿Realmente desea eliminar el elemento seleccionado: <strong id="nombreUsuario"></strong>?
                </div>
                <input type="hidden" name="id_usuario" id="usuarioIdEliminar" />
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">No</button>
                    <button type="submit" class="btn btn-dark">Sí, eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>