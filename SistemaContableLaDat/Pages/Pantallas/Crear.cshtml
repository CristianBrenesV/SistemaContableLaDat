@page
@model SistemaContableLaDat.Pages.Pantallas.CrearModel
@{
    ViewData["Title"] = "Crear Pantalla";
    Layout = "_PrincipalLayout";
}
<h1 class="mt-4">Crear Pantalla</h1>

<a asp-page="/Pantallas/Index" class="btn btn-outline-secondary">
    <i class="bi bi-arrow-left"></i> Regresar
</a>

<button type="submit" class="btn btn-dark" form="formCrearPantalla">
    <i class="bi bi-save"></i> Guardar
</button>


<div class="container mt-5 d-flex">
    <div class="card shadow-sm border-0 w-50" style="background-color: #d9d9d9;">
        <div class="card-body">

            <form id="formCrearPantalla" method="post">

                <div class="mb-3">
                    <label asp-for="Pantalla.Nombre" class="form-label"><strong>Nombre pantalla</strong></label>
                    <input asp-for="Pantalla.Nombre" class="form-control" />
                    <span asp-validation-for="Pantalla.Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Pantalla.Descripcion" class="form-label"><strong>Descripcion</strong></label>
                    <input asp-for="Pantalla.Descripcion" class="form-control" />
                    <span asp-validation-for="Pantalla.Descripcion" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Pantalla.Ruta" class="form-label"><strong>Ruta</strong></label>
                    <input asp-for="Pantalla.Ruta" class="form-control" />
                    <span asp-validation-for="Pantalla.Ruta" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Pantalla.Estado" class="form-label"><strong>Estado</strong></label>
                    <select asp-for="Pantalla.Estado" class="form-select">
                        <option value="">-- Seleccione estado --</option>
                        <option value="Activo">Activo</option>
                        <option value="Inactivo">Inactivo</option>
                    </select>
                    <span asp-validation-for="Pantalla.Estado" class="text-danger"></span>
                </div>
            </form>
        </div>
    </div>
</div>

