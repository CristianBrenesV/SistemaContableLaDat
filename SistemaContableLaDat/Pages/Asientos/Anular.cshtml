@page "{id:int}"
@model SistemaContableLaDat.Pages.Asientos.AnularModel
@{
    ViewData["Title"] = "Confirmar Anulación";
    Layout = "_PrincipalLayout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow-lg">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-shield-fill-exclamation"></i> Confirmar Anulación</h4>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <p class="fs-5">¿Está seguro de que desea anular el asiento contable <strong>#@Model.Asiento.Consecutivo</strong>?</p>

                    <div class="bg-light p-3 rounded mb-4 border">
                        <div class="row">
                            <div class="col-sm-4 fw-bold">Código:</div>
                            <div class="col-sm-8">@Model.Asiento.Codigo</div>

                            <div class="col-sm-4 fw-bold">Fecha:</div>
                            <div class="col-sm-8">@Model.Asiento.Fecha.ToString("dd/MM/yyyy")</div>

                            <div class="col-sm-4 fw-bold">Referencia:</div>
                            <div class="col-sm-8">@Model.Asiento.Referencia</div>
                        </div>
                    </div>

                    <div class="alert alert-warning border-warning">
                        <i class="bi bi-info-circle-fill"></i> Esta acción es irreversible y afectará los saldos de las cuentas involucradas.
                    </div>

                    <form method="post">
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a href="/Asientos" class="btn btn-outline-secondary">
                                <i class="bi bi-x-lg"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="bi bi-check-lg"></i> Confirmar Anulación
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>