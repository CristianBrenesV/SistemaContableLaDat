@page
@model SistemaContableLaDat.Pages.IndexModel
@{
    ViewData["Title"] = "Iniciar sesión";
    Layout = "_LoginLayout"; // Carga el layout de login desde shared, es una convención para mantener el código limpio y reutilizable
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; background-color: #e6e6e6;">
        <div class="text-center">
            <img src="/images/logo2.png" alt="Logo" class="img-fluid mb-3" style="max-height: 150px;" />
            <h4 class="card-title mb-3">Iniciar sesión</h4>
        </div>

        <form method="post">
            @Html.AntiForgeryToken()
            <div class="form-group mb-3">
                <label asp-for="Usuario" class="form-label">Usuario</label>
                <input type="text" asp-for="Usuario" name="Usuario" class="form-control"
                       placeholder="Ingrese su usuario" required />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Clave" class="form-label">Contraseña</label>
                <input type="password" asp-for="Clave" name="Clave" class="form-control"
                       placeholder="Ingrese su contraseña" required />
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-secondary w-100">Aceptar</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.Mensaje))
        {
            <div class="alert alert-dark mt-3" role="alert">
                @Model.Mensaje
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.MensajeInfo))
        {
            <div class="alert alert-dark mt-3" role="alert">
                @Model.MensajeInfo
            </div>
        }
    </div>
</div>
