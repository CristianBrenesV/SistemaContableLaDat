@inherits RazorPage<dynamic>
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Mvc.Razor
@{
    // Obtenemos los valores usando el operador ?. para que si FindFirst es null, no explote
    var nombreCompleto = User.FindFirst("NombreCompleto")?.Value;
    var nombreUsuario = User.FindFirst("NombreUsuario")?.Value;
    var apellidoUsuario = User.FindFirst("ApellidoUsuario")?.Value;

    // Construimos el nombre con lógica de caídas (fallbacks)
    string userName = "Invitado";

    if (!string.IsNullOrEmpty(nombreCompleto))
    {
        userName = nombreCompleto;
    }
    else if (!string.IsNullOrEmpty(nombreUsuario))
    {
        userName = $"{nombreUsuario} {apellidoUsuario}".Trim();
    }

    var avatarUrl = "/images/avatar_generico.jpg";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Sistema Contable de Desarrollos Ordenados S.A</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        body {
            overflow-x: hidden;
        }

        .sidebar {
            min-height: 100vh;
        }

        .topbar {
            height: 60px;
            color: white;
            padding: 0 1rem;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-3 col-lg-2 bg-dark sidebar text-white p-3">
                <div class="mb-3 d-flex justify-content-center">
                    <a href="/Principal">
                        <img src="/images/logo2.png" alt="Icono" style="width: 70px; height: 70px;" class="me-2" />
                    </a>
                </div>

                <div class="mb-3 d-flex justify-content-center">
                    <h4 class="text-center">Desarrollos Ordenados S.A</h4>
                </div>
                <div class="w-80 mx-auto" style="height: 3px; background-color: #e6e6e6; margin-bottom: 5px"></div>

                <ul class="nav flex-column">
                    <li class="nav-item mt-3">
                        <span class="text-white h6">Administración</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Pantallas/Listar">
                            <i class="bi bi-layout-text-window-reverse"></i> Gestión Pantallas
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Roles/Listar">
                            <i class="bi bi-person-badge"></i> Gestión Roles
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Usuarios/ListarUsuarios">
                            <i class="bi bi-people-fill"></i> Gestión Usuarios
                        </a>
                    </li>

                    <li class="nav-item mt-3">
                        <span class="text-white h6">Contabilidad</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Cuentas/Listar">
                            <i class="bi bi-book-half"></i> Cuentas contables
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Asientos">
                            <i class="bi bi-journal-text"></i> Asientos contables
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Asientos/Aprobar">
                            <i class="bi bi-check2-circle"></i> Aprobar asientos
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Cierres/Index">
                            <i class="bi bi-calculator"></i> Cierre Contable
                        </a>
                    </li>

                    <li class="nav-item mt-3">
                        <span class="text-white h6">Configuración</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Estados/Listar">
                            <i class="bi bi-clipboard-check"></i> Estados
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Periodos/Listar">
                            <i class="bi bi-calendar-check"></i> Periodos
                        </a>
                    </li>
                    

                    <li class="nav-item mt-4">
                        <form method="post" asp-page="/CerrarSesion" class="d-inline">
                            <button type="submit" class="btn btn-outline-light w-100 text-start">
                                <i class="bi bi-box-arrow-right"></i> Cerrar sesión
                            </button>
                        </form>
                    </li>
                </ul>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                <div class="topbar bg-dark d-flex justify-content-end align-items-center mb-3">
                    <span class="me-2">@userName</span>
                    <img src="@avatarUrl" alt="Avatar" class="rounded-circle" style="width: 40px; height: 40px;" />
                </div>

                @RenderBody()
            </main>
        </div>
    </div>

    <div class="modal fade" id="sessionExpiredModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Sesión caducada</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Tu sesión ha expirado por inactividad. Serás redirigido al login.</p>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-dark" href="/Index">Iniciar sesión</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const INACTIVITY_TIMEOUT = 5 * 60 * 1000;
        let inactivityTimer;
        function resetTimer() {
            clearTimeout(inactivityTimer);
            inactivityTimer = setTimeout(() => {
                const modal = new bootstrap.Modal(document.getElementById('sessionExpiredModal'));
                modal.show();
            }, INACTIVITY_TIMEOUT);
        }
        ['load', 'mousemove', 'keypress', 'click', 'scroll'].forEach(evt => window.addEventListener(evt, resetTimer));
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>