@page
@model SistemaContableLaDat.Pages.Usuarios.IndexModel
@{
    ViewData["Title"] = "Administración de Usuarios";
    Layout = "_PrincipalLayout";
}

<h1 class="mt-4">Administración de Usuarios</h1>
<p>
    <a class="btn btn-dark" asp-page="Crear">
        <i class="bi bi-plus-circle"></i> Nuevo
    </a>
</p>


<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th style="white-space: nowrap;">ID</th>
                <th style="white-space: nowrap;">Usuario</th>
                <th style="white-space: nowrap;">Nombre</th>
                <th style="white-space: nowrap;">Apellido</th>
                <th style="white-space: nowrap;">Correo Electrónico</th>
                <th style="white-space: nowrap;">Estado</th> 
                <th style="white-space: nowrap;">Rol</th>
                <th style="white-space: nowrap;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Usuarios.Count; i++)
            {
                <tr>
                    <td style="white-space: nowrap;">@Model.Usuarios[i].IdUsuario</td>
                    <td style="white-space: nowrap;">@Model.Usuarios[i].Usuario</td>
                    <td style="white-space: nowrap;">@Model.Usuarios[i].NombreUsuario</td>
                    <td style="white-space: nowrap;">@Model.Usuarios[i].ApellidoUsuario</td>
                    <td style="white-space: nowrap;">@Model.Usuarios[i].CorreoElectronico</td>

                    <td>
                        <form method="post" asp-page-handler="CambiarEstado" class="d-inline">
                            <input type="hidden" name="IdUsuario" value="@Model.Usuarios[i].IdUsuario" />
                            <select name="NuevoEstado" class="form-select form-select-sm"
                                    onchange="this.form.submit()">
                                @foreach (var estado in Enum.GetValues(typeof(SistemaContableLaDat.Entities.Usuarios.EstadoUsuario)))
                                {
                                    <option value="@estado"
                                            selected="@(estado.ToString() == Model.Usuarios[i].Estado ? "selected" : null)">
                                        @estado
                                    </option>
                                }
                            </select>
                        </form>
                        @{
                            var roles = Model.Usuarios[i].Roles.Split(", ");

                            Func<string, string> badgeColor = (rol) =>
                            {
                                return rol switch
                                {
                                    "Administrador" => "badge bg-dark text-white",
                                    "Contador" => "badge bg-secondary text-white",
                                    "Contador Jefe" => "badge bg-light text-dark border",
                                    _ => "badge bg-light text-dark border"
                                };

                            };
                        }

                    <td>
                        <div class="d-flex flex-column gap-1">
                            @foreach (var rol in roles)
                            {
                                <span class="badge @badgeColor(rol) rounded-pill px-3 py-2">@rol</span>
                            }
                        </div>
                    </td>


                    <td style="white-space: nowrap;">
                        <a class="btn btn-sm btn-outline-dark"
                           asp-page="Editar"
                           asp-route-IdUsuario="@Model.Usuarios[i].IdUsuario">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>

                        <a class="btn btn-sm btn-outline-secondary"
                           asp-page="CambiarClave"
                           asp-route-IdUsuario="@Model.Usuarios[i].IdUsuario">
                            <i class="bi bi-lock"></i> Cambiar Clave
                        </a>


                        <button type="button"
                                class="btn btn-sm btn-danger"
                                data-bs-toggle="modal"
                                data-bs-target="#modalEliminar"
                                data-id="@Model.Usuarios[i].IdUsuario"
                                data-nombre="@Model.Usuarios[i].Usuario">
                            <i class="bi bi-trash3"></i> Eliminar
                        </button>

                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

<nav aria-label="Paginación de usuarios" class="mt-4">
    <ul class="pagination pagination-dark justify-content-center">
        @if (Model.PaginaActual > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-route-pagina="@(Model.PaginaActual - 1)" aria-label="Anterior">
                    <i class="bi bi-chevron-left"></i>
                </a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPaginas; i++)
        {
            <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                <a class="page-link" asp-route-pagina="@i">@i</a>
            </li>
        }

        @if (Model.PaginaActual < Model.TotalPaginas)
        {
            <li class="page-item">
                <a class="page-link" asp-route-pagina="@(Model.PaginaActual + 1)" aria-label="Siguiente">
                    <i class="bi bi-chevron-right"></i>
                </a>
            </li>
        }
    </ul>
</nav>


@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-dark" role="alert">
        @TempData["Mensaje"]
    </div>
}

<div class="modal fade" id="modalEliminar" tabindex="-1" aria-labelledby="modalEliminarLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form method="post" asp-page-handler="Eliminar">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalEliminarLabel">Confirmar Eliminación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    ¿Realmente desea eliminar el elemento seleccionado: <strong id="nombreUsuario"></strong>?
                </div>
                <input type="hidden" name="id_usuario" id="usuarioIdEliminar" />
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">No</button>
                    <button type="submit" class="btn btn-dark">Sí, eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const modalEliminar = document.getElementById('modalEliminar');
        modalEliminar.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const idUsuario = button.getAttribute('data-id');
            const nombreUsuario = button.getAttribute('data-nombre');

            document.getElementById('usuarioIdEliminar').value = idUsuario;
            document.getElementById('nombreUsuario').textContent = nombreUsuario;
        });
    </script>
}
